{
    "name": "mern-authenticator",
    "version": "1.0.0",
    "description": "A starter MERN authenticator app",
    "main": "server/server.js",
    "scripts": {
        "start": "node server/server.js",
        "server": "nodemon server/server.js",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix server && npm install --prefix client && npm run build --prefix client"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/harsh2124/mern-authenticator.git"
    },
    "author": "Harsh",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/harsh2124/mern-authenticator/issues"
    },
    "homepage": "https://github.com/harsh2124/mern-authenticator#readme",
    "devDependencies": {
        "concurrently": "^5.3.0",
        "nodemon": "^2.0.6"
    }
}
